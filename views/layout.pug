doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    title= page_title
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.2.0/css/all.css')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i")
    link(rel='stylesheet', href=Config.BASE_URL + '/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href=Config.BASE_URL + '/stylesheets/style.css')
    block styles
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js",integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=",crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js",integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd", crossorigin="anonymous")
    script(src=Config.BASE_URL + '/javascripts/validator.min.js')
    script(src=Config.BASE_URL + '/javascripts/jstz.min.js')
    script(src=Config.BASE_URL + '/javascripts/shared.js')
    block scripts

  - var index = false;
  - var stdlayout = true;
  - var includefooter = true;
  body(data-developer-key=developerKey,data-thingpedia-url=Config.THINGPEDIA_URL,data-base-url=Config.BASE_URL,data-csrf-token=csrfToken)
    a#anch-top.anchor(href='#')
    nav.navbar-default.navbar.navbar-fixed-top(role="banner")

      div.navbar-header
        button(class="navbar-toggle collapsed", data-toggle="collapse", data-target="#page-nav")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand.hidden-xs.hidden-sm(href=Config.BASE_URL + '/')
          //img#logo(src=Config.BASE_URL + '/images/almond.png')
          | Genie
        span.navbar-brand.hidden-md.hidden-lg(aria-hidden='true')
          block page_name

      div.navbar-collapse.collapse(role="navigation")#page-nav
        include navbar.pug

    block content_container
      if stdlayout
        div.container#page-body
          if !index
            div.row.hidden-xs.hidden-sm
              h1.col-sm-12#page-title
                block page_name
          div.row
            div.col-sm-12
              block content
      else
        block content

    if includefooter
      footer.page-footer.hidden-xs.hidden-sm
        div.container
          div.row
            div.col-xs-12
              p
                small!= _("Genie is part of a research project of the <a href='https://oval.cs.stanford.edu'>Open Virtual Assistant Lab</a> at Stanford University.")
              p
                small
                  != _("Genie is free software, distributed under the <a href='https://opensource.org/licenses/Apache-2.0'>Apache license, version 2.0</a>. ")
